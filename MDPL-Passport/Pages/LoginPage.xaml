<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDPL_Passport.Pages.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry Placeholder="Login" x:Name="LoginEntry"/>
            
            <Entry Placeholder="Password" x:Name="PasswordEntry"/>
            
            <Button
                x:Name="LoginBtn"
                Text="Login"
                Clicked="TryLogin"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>